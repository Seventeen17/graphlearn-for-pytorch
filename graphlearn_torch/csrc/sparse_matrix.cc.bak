#include "graphlearn_torch/include/sparse_matrix.h"

namespace graphlearn_torch {

SparseMatrix::SparseMatrix(const torch::Tensor& indptr,
                           const torch::Tensor& indices,
                           torch::Tensor values,
                           const std::vector<int>& shape)
    : indptr_(indptr.data_ptr<int64_t>()),
      indices_(indices.data_ptr<int64_t>()),
      values_(values),
      shape_(shape) {
  TORCH_CHECK(indptr.dim() == 1);
  TORCH_CHECK(indices.dim() == 1);
  TORCH_CHECK(indptr.size(0) == shape[0] + 1);
  TORCH_CHECK(indices.size(0) == values.size(0));
  TORCH_CHECK(indptr.device() == values.device());
  TORCH_CHECK(indices.device() == values.device());
}


} // namespace graphlearn_torch

